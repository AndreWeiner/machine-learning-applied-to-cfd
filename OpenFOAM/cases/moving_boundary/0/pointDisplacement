FoamFile
{
    version     2.0;
    format      ascii;
    class       pointVectorField;
    location    "0";
    object      pointDisplacement;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 0 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    wall
    {
        type            pyTorchDisplacement;
        center          (0 0 0);
        model           "shape_model.pt";
        value           uniform (0 0 0);
    }
}


